<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgAboutProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/margin16"
        android:src="@drawable/darari"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textAboutName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textAboutName"
        android:layout_margin="@dimen/margin8"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgAboutProfile" />

    <TextView
        android:id="@+id/textAboutEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/textAboutEmail"
        android:layout_margin="@dimen/margin8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textAboutName" />

</androidx.constraintlayout.widget.ConstraintLayout>